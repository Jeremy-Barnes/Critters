<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.critters">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>


        <class>com.critters.dal.dto.User</class>
        <class>com.critters.dal.dto.Pet</class>
        <class>com.critters.dal.dto.Pet$PetColor</class>
        <class>com.critters.dal.dto.Pet$PetSpecies</class>

        <class>com.critters.dal.dto.Item</class>
        <class>com.critters.dal.dto.Item$ItemDescription</class>
        <!--<class>com.critters.dal.dto.WishListItem</class>-->
        <class>com.critters.dal.dto.Friendship</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/critters?autoReconnect=true"/>
            <property name="javax.persistence.jdbc.user" value="*******" />
            <property name="javax.persistence.jdbc.password" value="*******" />
            <!--<property name="hibernate.hbm2ddl.auto" value="validate" />-->
            <property name="javax.persistence.validation.mode" value="none" />
        </properties>
    </persistence-unit>
</persistence>